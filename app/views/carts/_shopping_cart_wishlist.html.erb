<% if !@wishlist.nil? && @wishlist.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @wishlist.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<div id="order-table" style="position:static;">
  <table cellspacing="2" cellpadding="3" border="0">
    <!--<thead>-->
    <tr class="order-head">
      <th class="order-item-nom" width="10px">№</th>
      <th class="order-head-name" width="520px">Наименование</th>
      <th class="order-head-name" width="15%">Размер</th>
      <th class="order-head-price" width="15%">Цена</th>
      <th id="ggg" class="order-head-cnt" width="7%" nowrap>Кол-во</th>
      <th class="order-head-sum" width="5%">Сумма</th>
      <th class="order-head-del" width="8%">Удалить</th>
      <th class="order-head-del" width="8%">В Корзину</th>
    </tr>
    <!--</thead>-->
  </table>

<%# if @cart %>
  <%# if @cart.total_quantity > 0 %>

  <div class="shopping-cart">

    <% @i2 = 0 %>  <!--для подсчета порядкового номера при оформлении заказа ( carts/_cart_row.html.erb )-->

    <% @cart.wishlists.each do |line_item| %>

        <%#= render 'carts/cart_row_whishlist', tovar: line_item.tovar_razmer, wishlist: line_item, show_total: true %>

        <%= render 'carts/cart_row_wishlist', tovar: line_item.tovar_razmer, wishlist: line_item, show_total: true %>

    <% end %>

    <!--<h4 class="cart-text">Итого<%#= render 'layouts/cart_text' %>руб.</h4>-->

    <%#= link_to "Продолжить покупки",sort_tovars_sort_all_path %>

    <%#= button_to  "Продолжить покупки",sort_tovars_sort_all_path %>

  </div>

</div>
















